{
  "version": 2,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/master",
      "destination": "https://studiobuddy-production.up.railway.app/master"
    },
    {
      "source": "/api/analyze", 
      "destination": "https://song-key-bpm-finder-app-production.up.railway.app/analyze"
    }
  ],
  "functions": {
    "api/master.js": {
      "maxDuration": 30
    },
    "api/analyze.js": {
      "maxDuration": 30
    }
  }
}